<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>


    <style name="ArticleItemLayout">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ArticleItemTitle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ArticleItemType">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.Black">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppTheme.White">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_scale_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_scale_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>

    <color name="colorWhite">#FFFFFF</color>
    <color name="colorBlack">#101010</color>
</resources>
